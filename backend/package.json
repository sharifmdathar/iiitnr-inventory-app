{
  "name": "@iiitnr/backend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "prisma generate && tsc",
    "start": "node dist/server.js",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" --fix",
    "typecheck": "tsc --noEmit",
    "format": "prettier -w .",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev"
  },
  "dependencies": {
    "@fastify/cors": "11.2.0",
    "@fastify/jwt": "10.0.0",
    "@prisma/adapter-pg": "7.2.0",
    "@prisma/client": "7.2.0",
    "bcryptjs": "3.0.3",
    "dotenv": "17.2.3",
    "fastify": "5.6.2",
    "pg": "8.17.1"
  },
  "devDependencies": {
    "@types/node": "25.0.8",
    "@types/pg": "8.16.0",
    "@typescript-eslint/eslint-plugin": "8.53.0",
    "@typescript-eslint/parser": "8.53.0",
    "eslint": "9.39.2",
    "eslint-config-prettier": "10.1.8",
    "prettier": "3.7.4",
    "prisma": "7.2.0",
    "tsx": "4.21.0",
    "typescript": "5.9.3"
  }
}