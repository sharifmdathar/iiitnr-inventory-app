generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum UserRole {
  ADMIN
  FACULTY
  STUDENT
  TA
}

enum ComponentCategory {
  Sensors
  Actuators
  Microcontrollers
  Microprocessors
  Others
}

enum Location {
  IoT_Lab
  Robo_Lab
  VLSI_Lab
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String?
  passwordHash String
  role      UserRole @default(STUDENT)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  requests  Request[]
  facultyRequests Request[] @relation("RequestFaculty")
}

model Component {
  id          String            @id @default(uuid())
  name        String
  description String?
  quantity    Int               @default(0)
  category    ComponentCategory?
  location    Location?
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt
  requestItems RequestItem[]
}

enum RequestStatus {
  PENDING
  APPROVED
  REJECTED
  FULFILLED
}

model Request {
  id        String        @id @default(uuid())
  userId    String
  targetFacultyId String?
  status    RequestStatus @default(PENDING)
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt

  user      User          @relation(fields: [userId], references: [id])
  targetFaculty User?     @relation("RequestFaculty", fields: [targetFacultyId], references: [id])
  items     RequestItem[]

  @@index([targetFacultyId])
}

model RequestItem {
  id        String   @id @default(uuid())
  requestId String
  componentId String
  quantity  Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  request   Request       @relation(fields: [requestId], references: [id])
  component Component     @relation(fields: [componentId], references: [id])

  @@index([requestId])
  @@index([componentId])
}