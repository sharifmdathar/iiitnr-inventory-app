generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model InventoryItem {
  id        String   @id @default(uuid())
  name      String
  quantity  Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum UserRole {
  ADMIN
  FACULTY
  STUDENT
  TA
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String?
  passwordHash String
  role      UserRole @default(STUDENT)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
